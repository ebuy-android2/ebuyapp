<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:secondaryProgressTint">@color/color_main</item>
        <item name="android:progressTint">@color/color_main</item>
        <item name="android:backgroundTint">@color/color_main</item>
        <item name="colorControlNormal">@color/color_main</item>
        <item name="colorControlActivated">@color/color_main</item>
        <item name="android:numStars">5</item>

    </style>

</resources>
